<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/light_green"
        tools:context="apps.mobile.finrest.com.finrest.Login">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your old MPIN"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <EditText
                android:id="@+id/old_mpin1"
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:background="@drawable/blue_border_rounded_rectangle"
                android:gravity="center"
                android:maxLength="1"
                android:maxLines="1"
                android:inputType="numberPassword"
                />
            <EditText
                android:id="@+id/old_mpin2"
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:background="@drawable/blue_border_rounded_rectangle"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:maxLength="1"
                android:maxLines="1"
                android:inputType="numberPassword"
                />
            <EditText
                android:id="@+id/old_mpin3"
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:background="@drawable/blue_border_rounded_rectangle"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:maxLength="1"
                android:maxLines="1"
                android:inputType="numberPassword"
                />
            <EditText
                android:id="@+id/old_mpin4"
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:background="@drawable/blue_border_rounded_rectangle"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:maxLength="1"
                android:maxLines="1"
                android:inputType="numberPassword"
                />
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter your new MPIN"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <EditText
                android:id="@+id/new_mpin1"
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:background="@drawable/blue_border_rounded_rectangle"
                android:gravity="center"
                android:maxLength="1"
                android:maxLines="1"
                android:inputType="numberPassword"
                />
            <EditText
                android:id="@+id/new_mpin2"
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:background="@drawable/blue_border_rounded_rectangle"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:maxLines="1"
                android:maxLength="1"
                android:inputType="numberPassword"
                />
            <EditText
                android:id="@+id/new_mpin3"
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:background="@drawable/blue_border_rounded_rectangle"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:maxLines="1"
                android:maxLength="1"
                android:inputType="numberPassword"
                />
            <EditText
                android:id="@+id/new_mpin4"
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:background="@drawable/blue_border_rounded_rectangle"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:maxLength="1"
                android:inputType="numberPassword"
                />
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm your new MPIN"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:maxLines="1"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <EditText
                android:id="@+id/cnfrm_mpin1"
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:background="@drawable/blue_border_rounded_rectangle"
                android:gravity="center"
                android:maxLength="1"
                android:maxLines="1"
                android:inputType="numberPassword"
                />
            <EditText
                android:id="@+id/cnfrm_mpin2"
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:background="@drawable/blue_border_rounded_rectangle"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:maxLength="1"
                android:maxLines="1"
                android:inputType="numberPassword"
                />
            <EditText
                android:id="@+id/cnfrm_mpin3"
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:background="@drawable/blue_border_rounded_rectangle"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:maxLength="1"
                android:maxLines="1"
                android:inputType="numberPassword"
                />
            <EditText
                android:id="@+id/cnfrm_mpin4"
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:background="@drawable/blue_border_rounded_rectangle"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:maxLength="1"
                android:maxLines="1"
                android:inputType="numberPassword"
                />
        </LinearLayout>
    </LinearLayout>
</ScrollView>


