<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/fin_green"
        tools:context="apps.mobile.finrest.com.finrest.Login">

        <TextView
            android:layout_height="40dp"
            android:layout_width="wrap_content"
            android:text="Reset 4 digit MPIN"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="20sp"
            android:fontFamily="calibri" />

        <EditText
            android:id="@+id/old_mpin"
            android:layout_height="40dp"
            android:layout_width="250dp"
            android:hint="Old MPIN"
            android:background="@drawable/blue_border_rounded_rectangle"
            android:textColor="@color/gray"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:textColorHint="@color/gray"
            android:maxLines="1"
            android:maxLength="4"
            android:inputType="numberPassword"
            android:digits="0123456789"
            android:fontFamily="calibri"
            />

        <EditText
            android:id="@+id/new_mpin"
            android:layout_height="40dp"
            android:layout_width="250dp"
            android:hint="New MPIN"
            android:background="@drawable/blue_border_rounded_rectangle"
            android:textColor="@color/gray"
            android:gravity="center"
            android:textSize="15sp"
            android:textColorHint="@color/gray"
            android:layout_marginTop="20dp"
            android:maxLines="1"
            android:maxLength="4"
            android:inputType="numberPassword"
            android:digits="0123456789"
            android:fontFamily="calibri"

            />

        <EditText
            android:id="@+id/cnfrmnewmpin"
            android:layout_height="40dp"
            android:layout_width="250dp"
            android:hint="Confirm New MPIN"
            android:background="@drawable/blue_border_rounded_rectangle"
            android:textColor="@color/gray"
            android:gravity="center"
            android:textSize="15sp"
            android:textColorHint="@color/gray"
            android:layout_marginTop="20dp"
            android:maxLines="1"
            android:maxLength="4"
            android:inputType="numberPassword"
            android:digits="0123456789"
            android:fontFamily="calibri"

            />

        <Button
            android:id="@+id/reset_mpin_submit"
            android:layout_height="40dp"
            android:layout_width="250dp"
            android:text="Submit"
            android:background="@drawable/blue_button_rounded"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            />

    </LinearLayout>
</ScrollView>