<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:orientation="vertical"
    tools:context="apps.mobile.finrest.com.finrest.HomePage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/mpin_border"
        android:orientation="vertical">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Account Type"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_weight=".5"/>
        <TextView
            android:id="@+id/account_type"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="account type"
            android:gravity="center"
            android:textSize="18dp"
            android:layout_weight=".5"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/mpin_border"
        android:orientation="vertical">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Account Number"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_weight=".5"/>
        <TextView
            android:id="@+id/account_no"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Account No"
            android:gravity="center"
            android:textSize="18dp"
            android:layout_weight=".5"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/mpin_border"
        >

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Account Name"
            android:gravity="center"
            android:layout_weight=".5"
            android:id="@+id/textView2"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/account_name"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Name"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_weight=".5"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/mpin_border"
        >
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Available Balance"
            android:gravity="center"
            android:layout_weight=".5"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/amount"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Amount"
            android:gravity="center"
            android:textSize="18dp"
            android:layout_weight=".5"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/mpin_border"
            android:orientation="vertical">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Account Status"
                android:gravity="center"
                android:layout_weight=".5"
                android:id="@+id/textView3"
                android:textStyle="bold"/>


            <TextView
                android:id="@+id/account_status"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="status"
                android:gravity="center"
                android:textSize="18dp"
                android:layout_weight=".5"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/mpin_border"
            >
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Account Open Date"
                android:gravity="center"
                android:layout_weight=".5"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/account_opening_date"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="dd/mm/yy"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_weight="0.56"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/mpin_border"
            android:orientation="vertical">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Rate Of Interest"
                android:gravity="center"
                android:layout_weight=".5"
                android:textStyle="bold"/>


            <TextView
                android:id="@+id/rate_of_interest"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="status"
                android:gravity="center"
                android:textSize="18dp"
                android:layout_weight=".5"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/mpin_border"
            >
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Period"
                android:gravity="center"
                android:layout_weight=".5"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/period"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="dd/mm/yy"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_weight="0.56"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/mpin_border"
        >
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Scheme"
            android:gravity="center"
            android:layout_weight=".5"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/skim_description"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Description"
            android:gravity="center"
            android:textSize="18dp"
            android:layout_weight=".5"/>
    </LinearLayout>
    <LinearLayout
        android:layout_height="0dp"
        android:layout_weight=".09"
        android:layout_width="match_parent"
        android:background="@color/fin_green"/>
</LinearLayout>
</ScrollView>