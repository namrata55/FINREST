<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:scrollbars="vertical"
        android:id="@+id/passbook_header">
    </TableLayout>
    <ScrollView
        android:id="@+id/invoice_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:layout_below="@+id/passbook_header"
        android:layout_above="@+id/buttons_bar"
        android:scrollbars ="none"
        >
        <TableLayout android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:stretchColumns="*"
            android:scrollbars="vertical"
            android:id="@+id/maintable">
        </TableLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@color/fin_blue"
        android:weightSum="5"
        android:id="@+id/buttons_bar">
        <Button
            android:text="&lt;&lt; Previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/fin_blue"
            android:textColor="@color/white"
            android:id="@+id/btnPre"
            android:gravity="center"
            />
    </LinearLayout>

    <Button
        android:text="Next >>"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/fin_blue"
        android:textColor="@color/white"
        android:id="@+id/btnNext"
        android:gravity="center"
        android:layout_alignTop="@+id/buttons_bar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>



